{% extends 'base.html.twig' %}

{% block title %}Список Авторов{% endblock %}

{% block body %}
    <h1>Список Авторов</h1>

    <table class="table">
        <thead>
            <tr>
                <th>№</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Книги</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ author.last }}</td>
                <td>{{ author.first }}</td>
                <td>{{ author.middle }}</td>
                <td><a href="{{ path('book_index', {'aid': author.id}) }}"> {{author.books.count }}</a></td>
                <td>
                    <a href="{{ path('author_show', {'id': author.id}) }}">Просмотр</a>
                    <a href="{{ path('author_edit', {'id': author.id}) }}">Редактирование</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Авторов пока нет</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('author_new') }}">Добавить Автора</a>
{% endblock %}