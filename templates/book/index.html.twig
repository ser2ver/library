{% extends 'base.html.twig' %}

{% block title %}Список Книг{% endblock %}

{% block body %}
    <h1>Список Книг</h1>

    <table class="table">
        <thead>
            <tr>
                <th>№</th>
                <th>Название</th>
                <th>Год</th>
                <th>Авторы</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.year }}</td>
                <td>
                    {% for author in book.authors %}
                        {{ author }}{% if not loop.last %}, {% endif %}
                    {% else %}
                        Неизвестно
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">Просмотр</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}">Редактирование</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Книг пока нет</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_new') }}">Добавить книгу</a>
{% endblock %}